# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                        controllers.Application.main

GET      /login                                  controllers.Login.login
POST     /login                                  controllers.Login.authenticate
GET      /logout                                 controllers.Login.logout

##################### ADMIN ##################### 
# 유저리스트 보기
GET      /admin/userList/page=:page              controllers.Admin.viewUserList(page:Long)

# 신규 유저 생성
GET      /admin/newUser                          controllers.Admin.newUserPage
POST     /admin/newUser/new                      controllers.Admin.newUser(user_id:String, email:String, name:String, password:String, user_type:String, project_id:Long)

# 유저리스트 업데이트
GET      /admin/editUser                         controllers.Admin.editUserPage(id:Long)
POST     /admin/editUser/edit                    controllers.Admin.editUser(id:Long, password:String, email:String, name:String)

# 유저삭제
DELETE   /admin/removeUser                       controllers.Admin.removeUser(id:Long)


# 신규 프로젝트 생성
GET      /admin/newProject                       controllers.Projects.createProjectPage
POST     /admin/newProject                       controllers.Projects.newProject

# 프로젝트 리스트 보기
GET      /admin/projectList/page=:page           controllers.Projects.viewProjectList(page:Long)


##################### BOARD ##################### 
# 해당 카테고리로 이동하기
GET      /board/:category/page=:page             controllers.Boards.list(category:String, page:Long)
GET      /board/:category/new                    controllers.Boards.newBoard(category:String)

# Create
POST     /board/:category/create/                controllers.Boards.create(category:String)

# READ
GET      /board/:category/:id                    controllers.Boards.readBoard(id:Long, category:String)
GET      /board/:category/:id/edit               controllers.Boards.editBoard(id:Long, category:String)

# Edit
POST     /board/update                           controllers.Boards.update(id:Long)

# Delete
DELETE   /board/:category/:id/delete             controllers.Boards.remove(id:Long, category:String)

# Reply
GET      /board/:category/:id/reply             controllers.Boards.replyBoard(id:Long, category:String)


##################### ROUTING ##################### 
# Javascript routing
GET     /assets/javascripts/routes               controllers.Application.javascriptRoutes

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
